{{> navbar}}
<div class="container">
    <div class="row">
        <div class="col s12 center-align">
            <h1>All Trains</h1>
        </div>
    </div>
    <div class="row">
        <div class="col s2"></div>
        <div class="col s8">
            {{#each trains}}
            <h3>{{name}}</h3>
            <p>{{number}}</p>
            <p>{{status}}</p>
            <p>{{currentStation}}</p>
            <p class="eta">{{eta}}</p>
            <a class="waves-effect waves-light btn" href="/trains/{{id}}/edit">Edit Train</a>
            <button class="waves-effect waves-light btn delete" data-id="{{id}}">Delete Train</button>
            {{/each}}
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".delete").on("click", function () {
            console.log($(this).data("id"));
            const idToDelete = $(this).data("id");

            $.ajax({
                url: `/api/trains/${idToDelete}`,
                method: "DELETE",
            }).then(response => {
                window.location.href = "/trains";
            })
        })
    })
</script>